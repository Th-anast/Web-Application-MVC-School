@model MVC_School.Models.CourseHasStudent

@{
    ViewData["Title"] = "Insert Grade";
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

<h1>Create</h1>

<h4>Insert Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="insertGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseIdCourse" class="control-label"></label>
                <select asp-for="CourseIdCourse" class="form-control" asp-items="ViewBag.CourseIdCourse" readonly></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentsRegistrationNumber" class="control-label"></label>
                <select asp-for="StudentsRegistrationNumber" class="form-control" asp-items="ViewBag.StudentsRegistrationNumber"readonly></select>
            </div>
            <div class="form-group">
                <label asp-for="GradeCourseStudent" class="control-label"></label>
                <input asp-for="GradeCourseStudent" class="form-control" min="0" max="10" />
                <span asp-validation-for="GradeCourseStudent" class="text-danger" ></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="ungradedCourses" asp-route-id="@ViewData["afm"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

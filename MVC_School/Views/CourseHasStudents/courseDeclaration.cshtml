@model MVC_School.Models.CourseHasStudent

@{
    ViewData["Title"] = "Course Declaration ";
    Layout = "~/Views/Shared/_LayoutSecretary.cshtml";
}

<h1>Declare a course to a student</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="courseDeclaration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@ViewData["id"]" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="CourseIdCourseNavigation.CourseTitle" class="control-label"></label>
                <select asp-for="CourseIdCourse" class="form-control" asp-items="ViewBag.IdCourse"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentsRegistrationNumberNavigation.FullName" class="control-label"></label>
                <select asp-for="StudentsRegistrationNumber" class="form-control" asp-items="ViewBag.RegistrationNumber" ></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="GradeCourseStudent" class="form-control" value=null />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
            </div>
        </form>
        <p style="color:red;">@ViewBag.error</p>
    </div>
</div>
<br>
<div>
    <a asp-controller="Home" asp-action="Secretary" asp-route-id="@ViewData["Phone_Number"]">Back to Home Page</a>
</div>